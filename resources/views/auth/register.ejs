<section class="login">
    <div class="flex items-center justify-center pt-16">
        <div class="px-8 py-6 mt-4 text-left bg-white shadow-lg">
            <form action="/register" method="POST">
                <% if(messages.error) { %>
                <span class="text-red-500"><%= messages.error %></span>
                <% } %>
                <div class="mt-4">
                    <div>
                        <label class="block" for="email">Name<label>
                                <input type="text" placeholder="Name" name="name" value="<%= messages.name %>"
                                    class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
                    </div>
                    <div>
                        <label class="block" for="email">Email<label> 
                                <input type="email" placeholder="Email" name="email" value="<%= messages.email %>"
                                    class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
                    </div>
                    <div class="mt-4">
                        <label class="block">Password<label>
                                <input type="password" placeholder="**************" name="password"
                                    class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
                    </div>
                    <div class="flex items-baseline justify-between">
                        <button class="px-6 py-2 mt-4 text-white rounded-full btn-primary" type="submit">Register</button>
                        <a href="/login" class="text-sm">Already have account?</a>
                    </div>
                </div>
            </form>
        </div>
    </div> 
    <p class="text-center text-gray-500 text-xs py-2">
        &copy;2021 Krutarth Chauhan.All rights reserved.
    </p>  
</section>